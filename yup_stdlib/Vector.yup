import "#std/Memory.yup";
import "#std/IO.yup";

pub Vector: struct {
	items: **void;
	cap: i64;
	size: i64;
}

pub Vector_items: fnc(vec: *Vector) -> **void {
	return vec.items.*;
}

pub Vector_size: fnc(vec: *Vector) -> i64 {
	return vec.size.*;
}

pub Vector_get: fnc(vec: *Vector, index: i64) -> *void {
	return vec.items.*[index];
}

pub Vector_set: fnc(vec: *Vector, index: i64, new_item: *void) {
	if vec.items.*[index] == Null {
    		return;
	}

	vec.items.*[index] = new_item;
}

pub Vector_init: fnc(vec: *Vector) {
	vec.cap = 4:i64;
	vec.size = 0:i64;
	vec.items = alloc_memory(sizeof(*void) * (vec.cap.*));
}

pub Vector_free: fnc(vec: *Vector) {
	free_memory(cast(vec.items.*, *void));
	vec.items = Null;
}

Vector_grow: fnc(vec: *Vector, new_cap: i64) {
	const new_size = sizeof(*void) * new_cap;
	vec.items = realloc_memory(cast(vec.items.*, *void), sizeof(vec.items.*), new_size);
	vec.cap = new_cap;
}

pub Vector_append: fnc(vec: *Vector, new_item: *void) {
	if (vec.cap.*) == (vec.size.*) {
    		const new_size = vec.size.* * 2;
    		vec.items = realloc_memory(cast(vec.items.*, *void), vec.size.*, new_size);
    		vec.size = new_size;
	}

	vec.size = vec.size.* + 1;
	vec.items.*[vec.size.*] = new_item;
}


pub Vector_print: fnc(vec: *Vector) {
	printf("Vector[");
	for var i = 0:i64; i < Vector_size(vec); i = i + 1; {
    		if i != 0 {
			printf(", ");
    		}
    		
		printf("%p", Vector_items(vec)[i].*);
	}

	printf("]\n");
}
