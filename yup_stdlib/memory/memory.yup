import "$std/memory/memlib.ll";

func Allocate(size: i64) -> i8* {
    malloc(size);
}

func Destroy(ptr: i8*) -> void {
    free(ptr);
}

func SetMemory(ptr: i8*, value: i32, sz: i64) -> i8* {
    return memset(ptr, value, sz);
}

func CopyMemory(dest: i8*, src: i8*, cnt: i64) -> void {
    memcpy(dest, src, cnt);
}
