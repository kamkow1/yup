import "#std/LibC.yup";

pub VError: struct {
    code: i32;
    message: *i8;

    pub new: fnc(_code: i32, _msg: *i8) -> *VError {
        const ve: *VError = malloc(sizeof(VError));
        VError::ve.code = _code;
        VError::ve.message = _msg;
        return ve;
    }
}

pub Errors: interf {
    pub raise_code: fnc(code: i32) {
        exit(code);
    }

    pub latest_reason: fnc(msg: *i8) {
        perror(msg);
    }
}

